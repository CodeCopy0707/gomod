type TestFailure struct {
	TestName    string `json:"test_name"`
	Message     string `json:"message"`
	StackTrace  string `json:"stack_trace"`
	Line        int    `json:"line"`
	Expected    string `json:"expected,omitempty"`
	Actual      string `json:"actual,omitempty"`
