		gitContext.Branch = "main"
	}

	color.Green("‚úì Initialized Git repo in %s/.git/ (branch: %s)", baseDir, gitContext.Branch)

	if _, err := os.Stat(filepath.Join(baseDir, ".gitignore")); os.IsNotExist(err) {
